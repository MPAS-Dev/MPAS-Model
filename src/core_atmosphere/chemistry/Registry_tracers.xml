<!-- state variables for the passive tracers: -->
 <var_struct name="state" time_levs="2">

      <var_array name="tracers" type="real" dimensions="nVertLevels nCells Time">
           <var name="tr17_7" array_group="passive" units="dimensionless"
                     description="boundary layer passive tracer"/>

           <var name="tr17_8" array_group="passive" units="dimensionless"
                     description="boundary layer passive tracer decaying with e-folding time of 1 day"/>
      </var_array>

 </var_struct>


 <var_struct name="tend" time_levs="1">

      <var_array name="tracers_tend" type="real" dimensions="nVertLevels nCells Time">
           <var name="tend_tr17_7" name_in_code="tr17_7" array_group="passive" units="dimensionless"
                     description="tendency of boundary layer passive tracer"/>

           <var name="tend_tr17_8" name_in_code="tr17_8" array_group="passive" units="dimensionless"
                     description="tendency of boundary layer passive tracer decaying with e-folding time of 1 day"/>
      </var_array>
      
 </var_struct>


<!-- tendencies associated with boundary layer and convective transport of pasive tracers: -->
 <var_struct name="tend_tracers" time_levs="1">

      <var_array name="bl_tracers" type="real" dimensions="nVertLevels nCells Time">
           <var name="bl_tr17_7" array_group="passive" units="dimensionless"
                     description=" "/>
           <var name="bl_tr17_8" array_group="passive" units="dimensionless"
                     description=" "/>
      </var_array>

      <var_array name="cu_tracers" type="real" dimensions="nVertLevels nCells Time">
           <var name="cu_tr17_7" array_group="passive" units="dimensionless"
                     description=" "/>
           <var name="cu_tr17_8" array_group="passive" units="dimensionless"
                     description=" "/>
      </var_array>

 </var_struct>


